@model FTHWebapp.Models.Volunteer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>@Html.DisplayFor(model => model.Name)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <button type="button" class="list-group-item" disabled>Naam: @Html.DisplayFor(model => model.Name) </button>

                Address: @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                Birthdate: @Html.TextBoxFor(model => model.Birthdate, new { @class = "form-control" })
                Experience: @Html.TextBoxFor(model => model.Experience, new { @class = "form-control" })
                Phonenumber: @Html.TextBoxFor(model => model.Phonenumber, new { @class = "form-control" })
                Email: @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                Username: @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                City: @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                Role: @Html.TextBoxFor(model => model.RoleName, new {@class = "form-control" })

            </div>
                

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

